<h1>Register New User</h1>

<%= form_with url: people_path, method: :post, local:true do |f|%>
	<p><%= f.label :name %></p>
	<p><%= f.text_area :name %></p>
	<p><%= f.label :email %></p>
	<p><%= f.text_area :email %></p>
	<p><%= f.label :password %></p>
	<p><%= f.text_area :password %></p>
	<p><%= f.label :confirm_password %></p>
	<p><%= f.text_area :confirm_password %></p>
	<p><%= f.submit "Register" %></p>
<% end %>
